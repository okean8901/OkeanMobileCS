@{
    ViewBag.Title = "Thanh toán thất bại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-times-circle text-danger" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 text-danger">@ViewBag.Message</h2>
                    <p class="lead">Mã đơn hàng: @ViewBag.OrderId</p>
                    <p>Vui lòng thử lại hoặc liên hệ với chúng tôi để được hỗ trợ.</p>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">Về trang chủ</a>
                        <a href="/Order/Details/@ViewBag.OrderId" class="btn btn-outline-primary">Xem chi tiết đơn hàng</a>
                        <a href="/Contact" class="btn btn-outline-danger">Liên hệ hỗ trợ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 