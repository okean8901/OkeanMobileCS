@model Okean_Mobile.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
	Layout = "_LayoutWithFooter";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <img src="~/images/logo.jpg" alt="Okean Mobile Logo" />
            <h2>Đăng nhập</h2>
            <p>Chào mừng bạn quay trở lại!</p>
        </div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-error"></div>

            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                <i class="fas fa-user form-icon"></i>
                <span asp-validation-for="Username" class="validation-error"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Mật khẩu" type="password" />
                <i class="fas fa-lock form-icon"></i>
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            <div class="form-group text-end mb-3">
                <a asp-action="ForgotPassword" class="text-primary">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn-auth">
                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
            </button>
        </form>

        <div class="auth-footer">
            <p>Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}