@model Okean_Mobile.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
	Layout = "_LayoutWithFooter";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <img src="~/images/logo.jpg" alt="Okean Mobile Logo" />
            <h2>Đăng ký tài khoản</h2>
            <p>Tạo tài khoản mới để bắt đầu mua sắm</p>
        </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-error"></div>

            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                <i class="fas fa-user form-icon"></i>
                <span asp-validation-for="Username" class="validation-error"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <i class="fas fa-envelope form-icon"></i>
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Mật khẩu" type="password" />
                <i class="fas fa-lock form-icon"></i>
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" type="password" />
                <i class="fas fa-lock form-icon"></i>
                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
            </div>

            <div class="form-group">
                <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
                <i class="fas fa-user-circle form-icon"></i>
                <span asp-validation-for="FullName" class="validation-error"></span>
            </div>

            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                <i class="fas fa-phone form-icon"></i>
                <span asp-validation-for="PhoneNumber" class="validation-error"></span>
            </div>

            <button type="submit" class="btn-auth">
                <i class="fas fa-user-plus me-2"></i>Đăng ký
            </button>
        </form>

        <div class="auth-footer">
            <p>Đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
        </div>
    </div>
</div>