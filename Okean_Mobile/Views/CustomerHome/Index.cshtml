@{
    ViewData["Title"] = "Trang chủ - Okean Mobile";
    Layout = "_LayoutWithFooter";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">Chào mừng đến với Okean Mobile</h1>
                <p class="lead">Khám phá thế giới công nghệ với những sản phẩm chất lượng cao</p>
                <a href="@Url.Action("Index", "Product")" class="btn btn-light btn-lg">Xem sản phẩm</a>
            </div>
            <div class="col-md-6">
                <img src="/images/hero-image.png" alt="Hero Image" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<!-- Featured Categories -->
<div class="container py-5">
    <h2 class="text-center mb-5">Danh mục nổi bật</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 category-card">
                <img src="/images/smartphone-category.jpg" class="card-img-top" alt="Điện thoại">
                <div class="card-body text-center">
                    <h5 class="card-title">Điện thoại</h5>
                    <p class="card-text">Khám phá những mẫu điện thoại mới nhất</p>
                    <a href="@Url.Action("Index", "Product", new { category = "smartphone" })" class="btn btn-primary">Xem ngay</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 category-card">
                <img src="/images/tablet-category.jpg" class="card-img-top" alt="Máy tính bảng">
                <div class="card-body text-center">
                    <h5 class="card-title">Máy tính bảng</h5>
                    <p class="card-text">Trải nghiệm công nghệ màn hình lớn</p>
                    <a href="@Url.Action("Index", "Product", new { category = "tablet" })" class="btn btn-primary">Xem ngay</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 category-card">
                <img src="/images/accessory-category.jpg" class="card-img-top" alt="Phụ kiện">
                <div class="card-body text-center">
                    <h5 class="card-title">Phụ kiện</h5>
                    <p class="card-text">Phụ kiện chính hãng cho thiết bị của bạn</p>
                    <a href="@Url.Action("Index", "Product", new { category = "accessory" })" class="btn btn-primary">Xem ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="display-4">Chào mừng đến với Okean Mobile</h1>
                    <p class="lead">Khám phá các sản phẩm điện thoại di động chất lượng cao</p>
                    <a asp-controller="CustomerProduct" asp-action="Index" class="btn btn-primary btn-lg">
                        Xem tất cả sản phẩm
                    </a>
                </div>
            </div>
        </div>
    </div>

    <h2 class="mb-4">Sản phẩm nổi bật</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in ViewBag.FeaturedProducts)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">Không có ảnh</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-danger fw-bold">@product.Price.ToString("N0") đ</p>
                        <div class="d-flex justify-content-between">
                            <a asp-controller="CustomerProduct" asp-action="Details" asp-route-id="@product.Id" 
                               class="btn btn-outline-primary">Xem chi tiết</a>
                            <button class="btn btn-success add-to-cart" data-product-id="@product.Id">
                                <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.add-to-cart').click(function() {
                var productId = $(this).data('product-id');
                $.post('/Cart/AddToCart', { productId: productId, quantity: 1 })
                    .done(function(response) {
                        if (response.success) {
                            // Update cart count
                            $('.cart-count').text(response.cartCount);
                            // Show success message
                            alert('Đã thêm sản phẩm vào giỏ hàng');
                        } else {
                            alert('Có lỗi xảy ra: ' + response.message);
                        }
                    })
                    .fail(function() {
                        alert('Có lỗi xảy ra khi thêm vào giỏ hàng');
                    });
            });
        });
    </script>
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
    }

    .category-card {
        transition: transform 0.3s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .category-card .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .category-card .card-body {
        padding: 1.5rem;
    }
</style> 