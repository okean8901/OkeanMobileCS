@model Okean_Mobile.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order #@Model.Id</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Order Information</h4>
        <dl class="dl-horizontal">
            <dt>Order Date</dt>
            <dd>@Model.OrderDate.ToString("g")</dd>

            <dt>Status</dt>
            <dd>@Model.Status</dd>
        </dl>
    </div>
</div>

<h4>Order Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@((item.Quantity * item.Price).ToString("C"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Total</th>
            <th>@Model.OrderDetails.Sum(od => od.Quantity * od.Price).ToString("C")</th>
        </tr>
    </tfoot>
</table>

<a asp-action="Index" class="btn btn-default">Back to Orders</a>